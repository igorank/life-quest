<MainScreen>:
    viewclass: 'LabelDataItem'  # Use the 'LabelDataItem' class for view items
    data: root.data
    RecycleBoxLayout:
    	orientation: 'vertical'
        default_size: None, dp(36)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height

<LabelDataItem>:
    canvas.before:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size

    text: ''
    font_size: '18sp'
    padding: dp(10), dp(10)
    size_hint_y: None
    height: self.texture_size[1] + dp(20)
    valign: 'middle'
